{
    "name": "root",
    "private": true,
    "scripts": {
        "docs": "vuepress dev docs",
        "docs:build": "vuepress build docs",
        "boot": "lerna bootstrap",
        "test": "lerna run test --parallel",
        "codecov": "lerna run codecov --parallel",
        "deploy": "npm run docs:build && gh-pages -m \"[ci skip]\" -d docs/.vuepress/dist",
        "run:scope": "lerna run --stream --scope",
        "precommit": "lerna run --concurrency 1 --stream precommit"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm test",
            "pre-commit": "npm run precommit",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/plugin-external-helpers": "^7.2.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.1.0",
        "babel-eslint": "^10.0.2",
        "babel-jest": "^24.8.0",
        "eslint": "^6.1.0",
        "eslint-config-standard": "^13.0.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.0",
        "gh-pages": "^2.1.1",
        "husky": "^3.0.3",
        "lerna": "^3.16.4",
        "lint-staged": "^9.2.1",
        "markdown-it-include": "^1.1.0",
        "metro-memory-fs": "^0.55.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-eslint": "^7.0.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-replace": "^2.2.0",
        "vuepress": "^1.0.3"
    }
}
