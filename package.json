{
    "name": "root",
    "private": true,
    "scripts": {
        "docs": "vuepress dev docs -h localhost",
        "docs:build": "vuepress build docs",
        "boot": "lerna bootstrap",
        "test": "lerna run test --parallel",
        "deploy": "npm run docs:build && gh-pages -m \"[ci skip]\" -d docs/.vuepress/dist",
        "run:scope": "lerna run --stream --scope",
        "precommit": "lerna run --concurrency 1 --stream precommit"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm test",
            "pre-commit": "npm run precommit",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-external-helpers": "^7.2.0",
        "@babel/plugin-proposal-decorators": "^7.3.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "gh-pages": "^2.0.1",
        "husky": "^1.3.1",
        "lerna": "^3.13.1",
        "lint-staged": "^8.1.5",
        "metro-memory-fs": "^0.53.0",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-eslint": "^5.0.0",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-replace": "^2.1.0",
        "vuepress": "^0.14.10"
    }
}
