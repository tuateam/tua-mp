<view
    class="li todo {{ todo.completed ? 'completed' : '' }} {{ todo.id === editedTodo.id ? 'editing' : '' }}"
>
    <view class="view">
        <checkbox-group
            data-index="{{ index }}"
            bindchange="onToggleTodo"
        >
            <checkbox
                class="toggle {{ todo.completed ? 'checked' : '' }}"
                checked="{{ todo.completed }}"
            />
            <label
                data-todo="{{ todo }}"
                bindlongpress="onPressTodo"
            >
                {{ todo.title }}
            </label>
        </checkbox-group>

        <view
            class="destroy"
            data-index="{{ index }}"
            bindtap="onTapRemove"
        />
    </view>

    <input
        class="edit"
        value="{{ todo.title }}"
        data-index="{{ index }}"
        bindblur="onBlurTodo"
    />
</view>
